{
  "name": "@buzuosheng/hooks",
  "version": "1.0.1",
  "description": "自定义react hooks, 包含useDebounce, useWorker等",
  "private": false,
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "typings": "dist/index.d.ts",
  "scripts": {
    "test": "jest",
    "build": "tsup src/index.ts",
    "lint": "eslint src --fix --ext .ts",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "keywords": [
    "react",
    "hooks",
    "debounce",
    "immer",
    "Worker"
  ],
  "author": "buzuosheng",
  "homepage": "https://github.com/buzuosheng/buzuosheng-hooks",
  "repository": {
    "type": "git",
    "url": "git@github.com:buzuosheng/buzuosheng-hooks.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/index.mjs",
      "limit": "10 KB"
    }
  ],
  "license": "ISC",
  "engines": {
    "node": ">=16"
  },
  "packageManager": "pnpm@8.6.11",
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@babel/preset-react": "^7.22.15",
    "@babel/preset-typescript": "^7.23.2",
    "@size-limit/esbuild": "^10.0.2",
    "@size-limit/esbuild-why": "^10.0.2",
    "@size-limit/preset-small-lib": "^10.0.2",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.6",
    "@types/react": "^18.2.36",
    "@types/react-dom": "^18.2.14",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-test-renderer": "^18.2.0",
    "size-limit": "^10.0.2",
    "ts-jest": "^29.1.1",
    "tsup": "^7.2.0"
  },
  "dependencies": {
    "immer": "^10.0.3",
    "shallowequal": "^1.1.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  }
}
